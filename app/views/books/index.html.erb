<% if flash[:notice] %>
     <p><%= flash[:notice] %></p>
     <% end %>

<h1>Books</h1>
 <Table>
  <Thead>
   <th>
    Title
   </th>
   <th>
    Body
   </th>
   <th></th>
   <th></th>
   <th></th>
  </Thead>

 <tbody>
  <% @books.each do |book| %>
  <tr>
   <td>
    <%= book.title %>
   </td>

   <td>
    <%= book.body %>
   </td>
    <td><%= link_to "show", book_path(book.id) %></td>
    <td><%= link_to "edit", edit_book_path(book.id) %></td>
    <td><%= link_to "destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
  </tr>
  <% end %>
 </tbody>
 </table>
 <h1>New Books</h1>
 <% if @book.errors.any? %>
  <%= @book.errors.count %>件のerrorが発生しました
  <% @book.errors.full_messages.each do |error| %>
    <%= error %>
  <% end %>
 <% end %>
  <%= form_with model: @book, local:true do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>

<% end %>
